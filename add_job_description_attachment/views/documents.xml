<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_document_upload_job_description_form" model="ir.ui.view">
        <field name="name">view.document.upload.job.description.form</field>
        <field name="model">documents.document</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="documents.document_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='datas']" position="attributes">
                <attribute name="options">{'accepted_file_extensions': '.pdf'}</attribute>
            </xpath>
        </field>
    </record>
</odoo>