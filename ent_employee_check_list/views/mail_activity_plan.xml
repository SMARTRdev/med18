<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="inherit_hr_mail_activity_plan_view_form_hr_employee_checklist" model="ir.ui.view">
            <field name="name">inherit.hr.mail.activity.plan.view.form.hr.employee.checklist</field>
            <field name="model">mail.activity.plan</field>
            <field name="inherit_id" ref="hr.mail_activity_plan_view_form_hr_employee"/>
